{
  "buildCommand": "npm run build",
  "outputDirectory": "siargao-surf/.next",
  "installCommand": "npm install && cd siargao-surf && npm install",
  "framework": "nextjs",
  "regions": ["sin1"],
  "functions": {
    "siargao-surf/src/app/api/**/*.ts": {
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/siargao-surf/$1"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    }
  ],
  "env": {
    "NEXT_PUBLIC_SITE_URL": "https://surf.kamaya-siargao.com"
  }
}